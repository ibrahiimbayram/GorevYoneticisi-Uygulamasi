
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Kulanıcı Bilgilerim</h2>
<br />
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">Sil</th>
            <th scope="col">Düzenle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var it in ViewBag.users)
        {
        <tr>
         
            <td>@it.Name</td>
            <td>@it.SurName</td>
            <td>@it.UserName</td>
            <td><a class="btn btn-dark btn-sm" asp-action="Delete" asp-controller="Home" asp-route-id="@it.Id">Sil</a></td>
            <td><a class="btn btn-success btn-sm" asp-action="Update" asp-route-id="@it.Id">Düzenle</a></td>
        </tr>}

    </tbody>
</table>

