@model Dto.DTOS.AppUserDtos.AppUserUpdateDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

@foreach (var i in ViewBag.users)
{
    <h2 class="text-center">Kullanıcı Bilgilerim</h2>
    <br />
    <br />

    <form method="post" class="mx-auto lead" asp-action="Update">
        <div class="row">
            <div class="col-md-6">
                <label asp-for="@Model.Name"></label>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                <input asp-for="@Model.Name" class="form-control" value="@i.Name" />
            </div>
            <div class="col-md-6">
                <label asp-for="@Model.SurName"></label>
                <span asp-validation-for="@Model.SurName" class="text-danger"></span>
                <input asp-for="@Model.SurName" class="form-control" value="@i.SurName" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label asp-for="@Model.UserName"></label>
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                <input asp-for="@Model.UserName" class="form-control" value="@i.UserName" />
            </div>
            <div class="col-md-6">
                <label asp-for="@Model.Password"></label>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                <input asp-for="@Model.Password" class="form-control" type="password" value="@i.Password" />
            </div>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <font size="2">
            <div>* Kullanıcı adı güncellendiğinde tekrar giriş yapılması gereklidir.</div>
        </font>

        <div class="footer">
            <button type="submit" class="btn btn-primary pull-right">Güncelle</button>
        </div>
    </form>
}